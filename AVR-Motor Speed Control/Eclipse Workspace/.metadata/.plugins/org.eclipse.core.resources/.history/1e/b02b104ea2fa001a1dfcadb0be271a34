#include "timer.h"

/*******************************************************************************
 *                           ISR Definition                                    *
 *******************************************************************************/



/*******************************************************************************
 *                            Timer Functions                                  *
 *******************************************************************************/
void TIMER_1_init(TIMER_TYPE_CONFIG* config_ptr) {

	/* Initialize TCCR1A */
	TCCR1A = 0;
	TCCR1A |= config_ptr->wgm_10_11;
	TCCR1A |= (config_ptr->ctc_mode_ch2 << 4);
	TCCR1A |= (config_ptr->ctc_mode_ch1 << 6);

	// FOC1 FOC2 ?



}
