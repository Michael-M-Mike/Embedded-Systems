 ******************************************************************************/

#include "timer.h"


/*******************************************************************************
 *                            Timer Functions                                  *
 *******************************************************************************/
void TIMER_0_PWM_init(TIMER_PRESCALER prescaler, uint16 compare_value) {

	/* Initialize TCCR1A */
	TCCR1A = (1 << COM1A1) | (1 << WGM11) | (1 << WGM10);

	/* Initialize TCCR1B */
	TCCR1B = (1 << WGM12) | (1 << WGM13) | prescaler;

	/* Initialize TCNT */
	TCNT1 = 0;

	/* Initialize Compare Values */
	OCR1A = compare_value;
}
