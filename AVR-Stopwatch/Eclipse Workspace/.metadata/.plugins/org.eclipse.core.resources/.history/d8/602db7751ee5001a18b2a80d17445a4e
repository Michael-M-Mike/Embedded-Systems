/*******************************************************************************
 *
 * Interface:
 * 		(PC0: PC3) -> Connected respectively to (A: D)     of a 74LS47 Decoder.
 * 		(PA0: PA5) -> Connected respectively to (EN1: EN6) of a 74LS47 Decoder.
 *
 ******************************************************************************/

#ifndef DECODER_H_
#define DECODER_H_

#include <avr/io.h>

void decoder_init();
void send_num(unsigned char num);
void enable_display_x_disable_rest(unsigned char display);

#endif /* DECODER_H_ */
